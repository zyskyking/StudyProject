<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/class_bg_shape4"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/mark_dialog_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/CustomProgressStyle"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/mark_dialog_tick"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:src="@mipmap/speak_wait_dialog_tick"/>


    <TextView
        android:layout_below="@id/mark_dialog_pb"
        android:id="@+id/speak_wait_dialog_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="正在判分"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</RelativeLayout>